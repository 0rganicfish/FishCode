{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "watch": true,
    "baseUrl": "./",
    "outDir": "build",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "static"]
}